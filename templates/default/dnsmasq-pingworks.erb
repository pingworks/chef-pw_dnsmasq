interface=<%= node['pw_dnsmasq']['interface'] %>
bind-interfaces
domain=<%= node['pw_dnsmasq']['domain'] %>
listen-address=<%= node['pw_dnsmasq']['gw_ip'] %>
dhcp-range=<%= node['pw_dnsmasq']['dhcp_range'] %>
dhcp-option=6,<%= node['pw_dnsmasq']['ctrl_ip'] %>
address=/ctrl.ws.pingworks.net/<%= node['pw_dnsmasq']['ctrl_ip'] %>
address=/compute0.ws.pingworks.net/<%= node['pw_dnsmasq']['gw_ip'] %>
address=/compute1.ws.pingworks.net/10.33.0.11
address=/compute2.ws.pingworks.net/10.33.0.12
address=/archive.ubuntu.com/<%= node['pw_dnsmasq']['ubuntu_mirror_ip'] %>
<% if node['pw_dnsmasq']['rubygems_mirror_ip'] != '' then %>
address=/rubygems.org/<%= node['pw_dnsmasq']['rubygems_mirror_ip'] %>
<% end %>
